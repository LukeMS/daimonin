material LandTiles128
{
    technique
    {
        pass
        {
            texture_unit
            {
                filtering linear linear point
                tex_coord_set 0
                texture terrain_texture_128.png
            }

            texture_unit
            {
                filtering linear linear point
                colour_op alpha_blend
                tex_coord_set 1
                texture terrain_texture_128.png
            }
        }
    }
}

material LandTiles128_Grid
{
    technique
    {
        pass
        {
            texture_unit 0
            {
                filtering none
                tex_coord_set 0
                texture terrain_texture_128.png
            }

            texture_unit 1
            {
                filtering none
                colour_op alpha_blend
                tex_coord_set 1
                texture terrain_texture_128.png
            }
            texture_unit 2
            {
                filtering none
                colour_op alpha_blend
                tex_coord_set 2
                texture grid_128.png
            }
        }
    }
}

