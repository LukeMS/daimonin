material WaterTiles
{
    technique
    {
        pass
        {
            scene_blend alpha_blend
            depth_write off
            texture_unit 0
            {
                //filtering none
                texture water_00_128.png
                // Give me alpha.
                alpha_op_ex modulate src_texture src_manual 0.65
                scroll_anim 0.01 0.01
                //wave_xform scale_x triangle 1.0 0.2 0.1 0.1
            }
        }
    }
}

material WaterTiles_Grid
{
    technique
    {
        pass
        {
            scene_blend alpha_blend
            depth_write off
            texture_unit
            {
                filtering none
                tex_coord_set 0
                texture water_00_128.png
                // Give me alpha.
                alpha_op_ex modulate src_texture src_manual 0.4
                scroll_anim 0.02 0.02
                //wave_xform scale_x triangle 1.0 0.2 0.1 0.1
            }
            texture_unit
            {
                // filtering none
                texture grid_128.png
                tex_coord_set 1
                colour_op alpha_blend
            }
        }
    }
}
