SHELL = @BOURNE_SHELL@

VPATH = @srcdir@
srcdir = @srcdir@

SOCKSRCS = \
	image.c \
	info.c \
	init.c \
	item.c\
	loop.c \
	lowlevel.c\
	metaserver.c\
	request.c\
	sounds.c

ZLIBSRCS = \
	adler32.c\
	crc32.c\
	compress.c\
	deflate.c\
	trees.c\
	zutil.c

SRCS = $(SOCKSRCS) $(ZLIBSRCS)

ALLFILES=$(SRCS) README Makefile.in

OBJS = $(SRCS:.c=.o)

ARFLAGS = cq

AR = @AR@
RM = @RM@

RANLIB = @RANLIB@

DEPEND = @DEPEND@

CFLAGS = @CFLAGS@ $(EXTRA_CFLAGS)

INCLUDES= $(EXTRA_INCLUDES) -I. -I../include -I$(srcdir)/../include

SED= @SED@

socket.a: $(OBJS)
	$(RM) -f $@
	$(AR) $(ARFLAGS) $@ $(OBJS)
	$(RANLIB) $@

depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -- $(SRCS)

# Nothing to install here
install::

proto:
	cproto -D__CEXTRACT__ $(INCLUDES) $(SOCKSRCS) > ../include/sockproto.h
	chmod 644 ../include/sockproto.h

archive:
	if [ ! -d $(ARCHIVE)/socket ]; then $(MKDIR) $(ARCHIVE)/socket; fi
	$(CP) $(ALLFILES) $(ARCHIVE)/socket

clean:
	$(RM) -f $(OBJS) Makefile.bak

distclean: clean
	$(RM) -f Makefile socket.a

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES)  -c $*.c

all:: socket.a

