VPATH = @srcdir@
srcdir = @srcdir@

SRCS = \
	linux.c\
	main.c

ALLFILES = $(SRCS) Makefile.in

DEPEND = @DEPEND@

SED = @SED@

OBJS = $(SRCS:.c=.o)

CFLAGS = @CFLAGS@ $(EXTRA_CFLAGS)

INCLUDES= $(EXTRA_INCLUDES) -I$(srcdir)/include

LDFLAGS = @LDFLAGS@

LIBS = @LIBS@ $(EXTRA_LIBS)

SHELL = @SHELL@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@

INSTALL = @INSTALL@

MKDIR = @MKDIR@
CC = @CC@
RM = @RM@

daimonin_start: $(OBJS) $(LOCAL_LIBRARIES)
	$(RM) -f $@
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LOCAL_LIBRARIES) $(LIBS)

depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -- $(SRCS)

clean::
	$(RM) -f daimonin_start $(OBJS) Makefile.bak

distclean:: clean
	$(RM) -f Makefile ./include/define.h

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES) -c $*.c

all: daimonin_start
