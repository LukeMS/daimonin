SHELL = @BOURNE_SHELL@

VPATH = @srcdir@
srcdir = @srcdir@

SRCS = \
	test_hashtable.c \
	test_shstr.c \
	test_main.c \
	test_object.c \
	test_map.c \
	benchmark_hashtable.c \
	benchmark_shstr.c \
	benchmark_main.c \
	common_support.c

ALLFILES=$(SRCS) README Makefile.in

OBJS = $(SRCS:.c=.o)

ARFLAGS = cq

AR = @AR@
RM = @RM@

RANLIB = @RANLIB@

DEPEND = @DEPEND@
FLEX = @LEX@

CFLAGS = @CFLAGS@ $(EXTRA_CFLAGS)

INCLUDES= $(EXTRA_INCLUDES) -I../include -I$(srcdir)/../include

SED= @SED@

libtest.a: $(OBJS)
	$(RM) -f $@
	$(AR) $(ARFLAGS) $@ $(OBJS)
	$(RANLIB) $@

depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -- $(SRCS)

# Nothing to install here
install::


proto:
	cproto -e -o ../include/testproto.h.bak $(INCLUDES) $(SRCS)
	chmod 644 ../include/testproto.h
	$(RM) -f ../include/testproto.h.bak

clean::
	$(RM) -f $(OBJS) libtest.a

distclean:: clean
	$(RM) -f Makefile libtest.a 

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES)  -c $*.c

all:: libtest.a

