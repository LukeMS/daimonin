SHELL = @BOURNE_SHELL@

VPATH = @srcdir@
srcdir = @srcdir@

ZLIBSRCS = \
	adler32.c\
	compress.c\
	crc32.c\
	deflate.c\
	trees.c\
	zutil.c

SRCS = $(ZLIBSRCS)

ALLFILES=$(SRCS) Makefile.in

OBJS = $(SRCS:.c=.o)

ARFLAGS = cq

AR = @AR@
RM = @RM@

RANLIB = @RANLIB@

DEPEND = @DEPEND@

CFLAGS = -W @CFLAGS@ $(EXTRA_CFLAGS)

INCLUDES= $(EXTRA_INCLUDES) -I. -I../include -I$(srcdir)/../include

SED= @SED@

zlib.a: $(OBJS)
	$(RM) -f $@
	$(AR) $(ARFLAGS) $@ $(OBJS)
	$(RANLIB) $@

depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -- $(SRCS)

# Nothing to install here
install::

archive:
	if [ ! -d $(ARCHIVE)/zlib ]; then $(MKDIR) $(ARCHIVE)/zlib; fi
	$(CP) $(ALLFILES) $(ARCHIVE)/zlib

clean:
	$(RM) -f $(OBJS) Makefile.bak zlib.a

distclean: clean
	$(RM) -f Makefile zlib.a

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES)  -c $*.c

all:: zlib.a

