<?xml version="1.0" encoding="utf-8"?>
<!-- This is the build file to build the Daimonin documentation using Ant.
  - To use this file, get Ant from http://ant.apache.org/ and in this
  - directory run "ant -projecthelp"
  -->
<project
    name    = "Daimonin Documentation"
    default = "all"
    basedir = "../.."
>

    <target
        name        = "all"
        description = "Validates the documentation source files and then generates all available formats"
        depends     = "bbCode, phpWiki, html4, xhtml11, ascii"
    />

    <target
        name        = "validate"
        description = "Validates the documentation source files"
    >
        <xmlvalidate
            failonerror = "yes"
            lenient     = "no"
        >
            <fileset dir="src/doc" includes="**/*.dai" />
        </xmlvalidate>
    </target>

    <target
        name        = "bbCode"
        description = "Generates documentation in bbCode format"
        depends     = "validate"
    >
        <mkdir dir="gen/bbCode" />
        <xslt
            basedir   = "src/doc"
            destdir   = "gen/bbCode"
            extension = ".bbc"
            style     = "src/xslt/dai2bbcode.xslt"
            includes  = "**/*.dai"
        />
    </target>

    <target
        name        = "phpWiki"
        description = "Generates documentation in phpWiki format"
        depends     = "validate"
    >
        <mkdir dir="gen/phpWiki" />
        <xslt
            basedir   = "src/doc"
            destdir   = "gen/phpWiki"
            extension = ".wiki"
            style     = "src/xslt/dai2phpWiki.xslt"
            includes  = "**/*.dai"
        />
    </target>

    <target
        name        = "html4"
        description = "Generates documentation in HTML 4.01 format"
        depends     = "validate"
    >
        <mkdir dir="gen/html4" />
        <xslt
            basedir   = "src/doc"
            destdir   = "gen/html4"
            extension = ".html"
            style     = "src/xslt/dai2html.xslt"
            includes  = "**/*.dai"
        />
        <copy
            todir = "gen/html4"
        >
            <fileset
                dir="src/doc"
            >
                <include name="**/*.gif" />
                <include name="**/*.png" />
                <include name="**/*.jfif" />
                <include name="**/*.jpeg" />
                <include name="**/*.jpg" />
                <include name="**/*.txt" />
            </fileset>
        </copy>
    </target>

    <target
        name        = "xhtml11"
        description = "Generates documentation in XHTML 1.1 format"
        depends     = "validate"
    >
        <mkdir dir="gen/xhtml11" />
        <xslt
            basedir   = "src/doc"
            destdir   = "gen/xhtml11"
            extension = ".xhtml"
            style     = "src/xslt/dai2xhtml11.xslt"
            includes  = "**/*.dai"
        />
        <copy
            todir = "gen/xhtml11"
        >
            <fileset
                dir="src/doc"
            >
                <include name="**/*.gif" />
                <include name="**/*.png" />
                <include name="**/*.jfif" />
                <include name="**/*.jpeg" />
                <include name="**/*.jpg" />
                <include name="**/*.txt" />
            </fileset>
        </copy>
    </target>

    <target
        name        = "ascii"
        description = "Generates documentation in ASCII format"
        depends     = "validate"
    >
        <mkdir dir="gen/ascii" />
        <xslt
            basedir   = "src/doc"
            destdir   = "gen/ascii"
            extension = ".txt"
            style     = "src/xslt/dai2ascii.xslt"
            includes  = "**/*.dai"
        />
    </target>

</project>
