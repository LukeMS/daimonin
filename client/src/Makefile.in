VPATH = @srcdir@
srcdir = @srcdir@

SRCS = \
	client.c\
	commands.c\
	event.c\
	inventory.c\
	item.c\
	main.c\
	map.c\
	menu.c\
	misc.c\
	player.c\
	socket.c\
	sound.c\
	sprite.c\
	textwin.c\
	wrapper.c\
	dialog.c\
	adler32.c \
	crc32.c \
	inflate.c\
	inffast.c\
	inftrees.c\
	uncompr.c\
	zutil.c

ALLFILES = $(SRCS) Makefile.in

DEPEND = @DEPEND@

SED = @SED@

OBJS = $(SRCS:.c=.o)

SDL_CFLAGS = @SDL_CFLAGS@
SDL_CONFIG = @SDL_CONFIG@
SDL_LIBS = @SDL_LIBS@ -lSDL_image -lSDL_mixer

CFLAGS = @CFLAGS@ $(EXTRA_CFLAGS) $(SDL_CFLAGS)

INCLUDES= $(EXTRA_INCLUDES) -I$(srcdir)/include

LDFLAGS = @LDFLAGS@

LIBS = @LIBS@ $(EXTRA_LIBS) $(SDL_LIBS)

SHELL = @SHELL@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@

INSTALL = @INSTALL@

MKDIR = @MKDIR@
CC = @CC@
RM = @RM@

daimonin: $(OBJS) $(LOCAL_LIBRARIES)
	$(RM) -f $@
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LOCAL_LIBRARIES) $(LIBS)

depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -- $(SRCS)

clean::
	$(RM) -f daimonin $(OBJS) Makefile.bak

distclean:: clean
	$(RM) -f Makefile ./include/define.h

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES) -c $*.c

all: daimonin
